{{- /* Go Template */ -}}
{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash

sudo apt install --yes {{ range .packages.linux.apt }} {{ . }}{{ end }}

# install asdf via github release
if begin not type asdf &> /dev/null; or asdf --version | string match -r "{{ .packages.asdf.version }}"; end
    curl -sSLO https://github.com/asdf-vm/asdf/releases/latest/download/asdf-v{{ .packages.asdf.version }}-linux-amd64.tar.gz &&
    tar xvzf asdf-v{{ .packages.asdf.version }}-linux-amd64.tar.gz &&
    sudo install -m 755 -o root -g root asdf /usr/local/bin/asdf
end

# install starship
curl -sSL https://starship.rs/install.sh | sh -s -- --yes >/dev/null
{{ end -}}
