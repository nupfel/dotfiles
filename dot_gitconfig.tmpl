{{- /* Go Template */ -}}
[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol,tab-in-indent

[user]
	email = {{ .git_email }}
	name = Tobias Kirschstein
#	signingKey = ~/.ssh/sony.pub

[pull]
	rebase = true
	ff = only

[push]
	autoSetupRemote = true
	default = current
	followTags = true

[rerere]
	enabled = true
	autoUpdate = true

[column]
	ui = auto

[branch]
	sort = -committerdate
	autosetupmerge = true

[github]
	username = nupfel

[gist]
	private = yes

[rebase]
	autostash = true
	autoSquash = true

[status]
	submodulesummary = false
	showStash = true
	showUntrackedFiles = all

[commit]
	verbose = true
#	gpgSign = true

[gpg]
	format = ssh

[tag]
	sort = version:refname
#	gpgSign = true

[fetch]
	prune = true
	pruneTags = true
	writeCommitGraph = true

[grep]
	column = true
	fullname = true
	lineNumber = true

[merge]
	ff = only

[remote "origin"]
	fetch = +refs/pr/*/head:refs/remotes/pull_requests/*
	fetch = +refs/mr/*/head:refs/remotes/merge-requests/*

[color]
	ui = true
	pager = true
	interactive = auto
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	showbranch = auto
	status = auto

[color "diff"]
	whitespace = red reverse
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
